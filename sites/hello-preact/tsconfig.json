{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "composite": true,
        "noEmit": true
    },
    "include": ["*.ts", "*.tsx", "*.mts"],
    "exclude": ["worker/**/*", "dist/**/*", "node_modules/**/*"]
}
