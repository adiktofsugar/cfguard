{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "vcs": {
        "clientKind": "git",
        "useIgnoreFile": true,
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "useButtonType": "off"
            },
            "nursery": {
                "noGlobalEval": "error"
            },
            "style": {
                "noRestrictedGlobals": {
                    "level": "error",
                    "options": {
                        "deniedGlobals": ["URL", "URLSearchParams"]
                    }
                }
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    }
}
