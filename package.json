{
    "name": "cloudflare-sites",
    "private": true,
    "version": "1.0.0",
    "workspaces": [
        "sites/*"
    ],
    "scripts": {
        "dev:login": "npm run -w @sites/login dev",
        "dev:hello": "npm run -w @sites/hello-world dev",
        "build": "turbo run build",
        "lint": "concurrently -gr npm:lint:*",
        "lint:biome": "biome check",
        "lint:tsc": "tsc --build",
        "fix": "biome check --fix --unsafe .",
        "deploy": "turbo run deploy",
        "test": "turbo run test"
    },
    "author": "",
    "license": "ISC",
    "description": "",
    "devDependencies": {
        "@biomejs/biome": "^2.2.0",
        "@cloudflare/vite-plugin": "^1.11.6",
        "@cloudflare/workers-types": "^4.20250831.0",
        "@playwright/test": "^1.55.0",
        "@preact/preset-vite": "^2.10.2",
        "@preact/signals": "^2.3.1",
        "@tsconfig/node22": "^22.0.2",
        "@types/minimist": "^1.2.5",
        "@types/node": "^22.17.2",
        "concurrently": "^9.2.0",
        "minimist": "^1.2.8",
        "playwright": "^1.55.0",
        "preact": "^10.19.3",
        "tsx": "^4.20.4",
        "turbo": "^2.5.6",
        "typescript": "^5.9.2",
        "vite": "^7.1.3",
        "wrangler": "^4.31.0"
    }
}
